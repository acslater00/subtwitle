%html
  %head
    %title Subtwitle
    = stylesheet_link_tag "application"
    %script{:type => 'text/javascript',
            :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js'}
    = javascript_include_tag :all
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-24500730-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    #content
      %h1 Subtwitle
      %form
        %label{:for => :username} What's your Twitter handle?
        %input{:type => :text, :id => :username,
               :name => :username, :value => @username}
        %input{:type => :submit, :value => "Go"}
      #captions
        .caption
          %img
          .tweet
    =yield
    #footer
      .people
        .person.kripet
          %a{:href => 'http://twitter.com/kripet'}
            %img
          %span
            Made by
            %a{:href => 'http://twitter.com/kripet'} @kripet
        .person.steve_rit
          %a{:href => 'http://twitter.com/steve_rit'}
            %img
          %span
            Inspired  by
            %a{:href => 'http://twitter.com/steve_rit'} @steve_rit
